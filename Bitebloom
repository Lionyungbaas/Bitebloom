<!DOCTYPE html>
<html>
<head>
  <title>BiteBloom - Local Handmade Food</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
  <style>
    body { margin: 0; font-family: sans-serif; }
    #map { height: 100vh; width: 100%; }
    .map-title {
      position: absolute;
      top: 10px;
      left: 10px;
      background: white;
      padding: 8px 12px;
      border-radius: 8px;
      font-weight: bold;
      box-shadow: 0 2px 6px rgba(0,0,0,0.2);
      z-index: 10;
    }
  </style>
</head>
<body>
  <div class="map-title">BiteBloom: Handmade Food Near You</div>
  <div id="map"></div>

  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  <script>
    // Create map
    const map = L.map('map').setView([37.7749, -122.4194], 13); // SF example

    // Add OpenStreetMap tiles
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    // Sample food sellers
    const sellers = [
      {
        name: "Mama T’s Tamales",
        position: [37.778, -122.417],
        description: "Handmade tamales. Open weekends!"
      },
      {
        name: "SweetBites Bakery",
        position: [37.768, -122.429],
        description: "Cupcakes, cookies, and cakes."
      },
      {
        name: "Joe’s Jollof",
        position: [37.764, -122.403],
        description: "West African home meals daily."
      }
    ];

    // Add markers
    sellers.forEach(seller => {
      L.marker(seller.position).addTo(map)
        .bindPopup(`<strong>${seller.name}</strong><br>${seller.description}`);
    });
  </script>
</body>
</html>
